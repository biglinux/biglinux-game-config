[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = comm-game-config

[Action]
Description = Installing GPU-specific packages...
When = PostTransaction
Depends = lspci
Exec = /usr/bin/pacman -S --noconfirm $(lspci | grep -q "AMD.*VGA\|VGA.*AMD" && echo "corectrl" || (lspci | grep -q "NVIDIA.*VGA\|VGA.*NVIDIA" && echo "gwe"))