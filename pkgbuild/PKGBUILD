# Contributor: Narayan Silva <narayan.song@gmail.comm>

pkgname=comm-game-config
pkgdesc="Community Game Configuration é um pacote para automatizar a instalação e configuração de programas para facilitar jogos."
depends=(
    'python'
)

optdepends=(
    'corectrl: Para controle avançado de GPUs AMD'
    'gwe: Para controle avançado de GPUs NVIDIA'
    'steam: Cliente de jogos Steam'
    'mangohud: Monitor de desempenho em jogos'
    'heroic-games-launcher: Cliente alternativo para jogos Epic Games'
    'proton-ge-custom-bin: Versão personalizada do Proton para melhor compatibilidade'
    'linux-steam-integration: Integração do Steam com Linux'
    'python-steam: Biblioteca Python para interação com Steam'
)

pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/communitybig/${pkgname}"
source=("git+${url}.git")
md5sums=('SKIP')
install=pkgbuild.install

prepare() {
    cd "${srcdir}/${pkgname}"
    # Add any preparation steps here, if needed
}

build() {
    cd "${srcdir}/${pkgname}"
    # No build steps needed as we're using pre-translated files
}

check() {
    cd "${srcdir}/${pkgname}"
    # Add check/test steps here, if needed
}

package() {
    cd "${srcdir}/${pkgname}"

    # Determine the correct source directory
    if [ -d "${pkgname}" ]; then
        srcdir="${srcdir}/${pkgname}/${pkgname}"
    else
        srcdir="${srcdir}/${pkgname}"
    fi

    # Install files
    local dirs=("usr" "etc" "opt")
    for dir in "${dirs[@]}"; do
        if [ -d "${srcdir}/${dir}" ]; then
            cp -a "${srcdir}/${dir}" "${pkgdir}/"
        fi
    done

    # Install license file if present
    if [ -f "LICENSE" ]; then
        install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    fi

    # Install documentation if present
    if [ -f "README.md" ]; then
        install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
    fi
}
